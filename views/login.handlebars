<div class="row">
  <div class="col-lg-12">
    {{#if success_msg}}
        <div class="alert alert-success">  <center>{{success_msg}}  </center></div>
        {{/if}}

        {{#if error_msg}}
        <div class="alert alert-danger">  <center>{{error_msg}}  </center></div>
        {{/if}}

        {{#if error}}
      <div class="alert alert-danger">  <center>{{error}}  </center></div>
        {{/if}}
    </div>
</div>

<div class='login-bar' style="padding-bottom: 10%">
<h2 class="page-header">Account Login</h2>
<form method="post" action="/users/login">
  <div class="form-group">
    <label>Username</label>
    <i class="fa fa-user-o" aria-hidden="true"></i>
    <input type="text" class="form-control" name="username" placeholder="Username">
  </div>
  <div class="form-group">
    <label>Password</label>
        <i class="fa fa-key fa-fw" aria-hidden="true"></i>
    <input type="password" class="form-control" name="password" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
</div>
